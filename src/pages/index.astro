---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import FormattedDate from '../components/FormattedDate.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-TW">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.hero {
				text-align: center;
				padding: 3rem 1rem 2rem;
			}
			.hero h1 {
				font-size: 2.5rem;
				margin-bottom: 0.25rem;
			}
			.hero .tagline {
				font-size: 1.25rem;
				color: rgb(var(--gray));
				margin: 0;
			}
			.hero .subtitle {
				font-size: 1rem;
				color: rgb(var(--gray));
				margin-top: 0.5rem;
			}
			/* podcast links placeholder */
			.podcast-links {
				display: flex;
				justify-content: center;
				gap: 1rem;
				margin-top: 1.5rem;
			}
			.podcast-links a {
				padding: 0.5rem 1.25rem;
				border-radius: 8px;
				background: rgb(var(--accent));
				color: white;
				text-decoration: none;
				font-size: 0.9rem;
			}
			.podcast-links a:hover {
				opacity: 0.85;
			}
			hr.divider {
				border: none;
				border-top: 1px solid rgb(var(--gray-light));
				margin: 0 auto 2rem;
				width: 80%;
				max-width: 720px;
			}
			.posts-section {
				width: 960px;
				max-width: 100%;
				margin: 0 auto;
			}
			.posts-section h2 {
				text-align: center;
				margin-bottom: 1.5rem;
				font-size: 1.5rem;
			}
			ul {
				display: flex;
				flex-wrap: wrap;
				gap: 2rem;
				list-style-type: none;
				margin: 0;
				padding: 0;
			}
			ul li {
				width: 100%;
				text-align: center;
				margin-bottom: 1rem;
			}
			ul li * {
				text-decoration: none;
				transition: 0.2s ease;
			}
			ul li img {
				width: 100%;
				margin-bottom: 0.5rem;
				border-radius: 12px;
			}
			ul li a {
				display: block;
			}
			.title {
				margin: 0;
				color: rgb(var(--black));
				line-height: 1;
				font-size: 2.369rem;
			}
			.date {
				margin: 0;
				color: rgb(var(--gray));
			}
			ul li a:hover h4,
			ul li a:hover .date {
				color: rgb(var(--accent));
			}
			ul a:hover img {
				box-shadow: var(--box-shadow);
			}
			@media (max-width: 720px) {
				.hero h1 {
					font-size: 1.8rem;
				}
				ul {
					gap: 0.5em;
				}
				ul li {
					margin-bottom: 0;
				}
				.title {
					font-size: 1.563em;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<h1>Way 你說</h1>
				<p class="tagline">藉書說理</p>
				<p class="subtitle">每週用一個問題，帶你讀懂一本好書。</p>
				<!-- TODO: 加入 Podcast 平台連結
				<div class="podcast-links">
					<a href="#">Apple Podcast</a>
					<a href="#">Spotify</a>
				</div>
				-->
			</section>
			<hr class="divider" />
			<section class="posts-section">
				<h2>最新文章</h2>
				<ul>
					{
						posts.map((post) => (
							<li>
								<a href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={360} src={post.data.heroImage} alt="" />
									)}
									<h4 class="title">{post.data.title}</h4>
									<p class="date">
										<FormattedDate date={post.data.pubDate} />
									</p>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
